# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/jeweller_pricing?schema=public"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"

# Server Configuration
PORT=3001
NODE_ENV=development

# API Keys for Metal Prices
# Option 1: GoldAPI (https://www.goldapi.io/)
GOLD_API_KEY="your-goldapi-key"

# Option 2: Metals.live API (free, no key required)
# Uses https://api.metals.live/v1/spot

# Exchange Rate API (https://www.exchangerate-api.com/)
EXCHANGE_RATE_API_KEY="your-exchangerate-api-key"

# Default Settings
DEFAULT_LABOUR_RATE=350
DEFAULT_MARKUP_PCT=30
DEFAULT_CURRENCY=ZAR

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads